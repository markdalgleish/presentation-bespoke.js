@font-face {
  font-family: 'League Gothic';
  src: url("../font/league_gothic-webfont.eot");
  src: url("../font/league_gothic-webfont.eot?#iefix") format("embedded-opentype"), url("../font/league_gothic-webfont.woff") format("woff"), url("../font/league_gothic-webfont.ttf") format("truetype"), url("../font/league_gothic-webfont.svg#LeagueGothicRegular") format("svg");
  font-weight: normal;
  font-style: normal;
}

* {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
	box-sizing: border-box;
}

article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
	display: block;
}

body {
	overflow: hidden;
}

article {
	overflow: hidden;
	background-color: white;
	perspective: 600px;
	position: absolute;
	height: 100%;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;

	section {
		transform-style: preserve-3d;
		width: 800px;
		height: 600px;
		position: absolute;
		left: 50%;
		margin-left: -400px;
		top: 50%;
		margin-top: -300px;
		opacity: 0;
		text-align: center;

		&.bespoke-active {
		  opacity: 1;
		}
	}

	h2 {
		white-space: nowrap;
	}

	pre {
		color: #808080;
		text-align: left;
		font-family: monaco, monospace;
		font-size: 20px;
		padding: 0 74px 40px;
		margin: 0 auto;

		.class, .function {
			color: #1859FF;
		}

		.css-property, .numeric, .unit, .keyword, .constant {
			color: #303030;
		}

		.css-value, .string {
			color: #FF349D;
		}
	}

	h2+pre, h2+pre+pre {
		font-size: 18px;
		line-height: 24px;
		width: 460px;
		margin: 0 auto 0;
		padding-bottom: 24px;
	}
	h2+pre {
		margin-top: 18px;
	}

	img {
		width: 150px;
		height: 150px;
		border-radius: 12px;
		margin-bottom: 36px;
	}

	&.reveal {
		background: radial-gradient(circle, #555A5F, #1C1E20);
		background-color: #282a2d;

		.bespoke-progress {
			position: absolute;
			height: 3px;
			width: 100%;
			bottom: 0;
			left: 0;
			background: rgba(0,0,0,0.2);
		
			span {
				transition: width 800ms cubic-bezier(0.260, 0.860, 0.440, 0.985);
				display: block;
				height: 100%;
				width: 0px;
				background: hsl(185, 85%, 50%);
			}
		}

		section {
			color: white;
			transition: transform-origin 800ms cubic-bezier(0.26,.86,.44,.985),transform 800ms cubic-bezier(0.26,.86,.44,.985),visibility 800ms cubic-bezier(0.26,.86,.44,.985),opacity 800ms cubic-bezier(0.26,.86,.44,.985);

			&.bespoke-before {
			  transform: translate3d(-100%,0,0) rotateY(-90deg) translate3d(-100%,0,0);
			}

			&.bespoke-after {
			  transform: translate3d(100%,0,0) rotateY(90deg) translate3d(100%,0,0);
			}

			[data-bespoke-bullet] {
				transition: all .2s ease;
			}
			.bespoke-bullet-inactive {
				opacity: 0;
			}
			.bespoke-bullet-active {
				opacity: 1;
			}
		}

		.controls {
			display: block;
			position: fixed;
			width: 100px;
			height: 100px;
			z-index: 30;
			right: 0;
			bottom: 0;

			a {
				text-decoration: none;
				font-size: 0.83em;
				position: absolute;
				opacity: 0.1;
				color: #fff;

				&.enabled {
					opacity: 0.6;
					color: hsl(185, 85%, 70%);
					text-shadow: 0px 0px 2px hsla(185, 45%, 70%, 0.3);

					&:active {
						margin-top: 1px;
					}
				}
			}

			.left { top: 30px; }
			.right { left: 60px; top: 30px; }
			.up { left: 30px; }
			.down { left: 30px; top: 60px; }
		}
	}

	&.reveal, &.clean .reveal {
		font-family: 'Lato', Times, 'Times New Roman', serif;
		font-size: 36px;
		font-weight: 200;
		letter-spacing: -0.02em;
		color: #eee;

		h1 { font-size: 3.77em; }
		h2 { font-size: 2.11em;	}
		h3 { font-size: 1.55em;	}
		h4 { font-size: 1em; }

		h1, h2, h3, h4, h5, h6 {
			margin: 0 0 20px 0;
			color: #EEE;
			font-family: "League Gothic", Impact, sans-serif;
			line-height: 0.9em;
			letter-spacing: 0.02em;
			text-transform: uppercase;
			text-shadow: 0px 0px 6px rgba(0, 0, 0, 0.2);
		}

		h1 {
			text-shadow: 0 1px 0 #CCC, 0 2px 0 #C9C9C9, 0 3px 0 #BBB, 0 4px 0 #B9B9B9, 0 5px 0 #AAA, 0 6px 1px rgba(0, 0, 0, 0.1), 0 0 5px rgba(0, 0, 0, 0.1), 0 1px 3px rgba(0, 0, 0, 0.3), 0 3px 5px rgba(0, 0, 0, 0.2), 0 5px 10px rgba(0, 0, 0, 0.25), 0 20px 20px rgba(0, 0, 0, 0.15);
		}

		ul {
			display: inline-block;
			text-align: left;
			margin: 0 0 0 1em;
			list-style-type: disc;
		}
	}

	&.clean {
		transition: background-color 800ms cubic-bezier(0.260, 0.860, 0.440, 0.985);
		background-color: #fff;
		font-family: georgia;
		color: #404040;

		h2 {
			font-size: 52px;
			line-height: 52px;
			padding-bottom: 26px;
		}

		li {
			color: #606060;
			list-style-type: none;
			font-size: 32px;
			font-weight: 200;
			line-height: 52px;
		}

		[data-bespoke-bullet] {
			transition: all .6s ease;

			&.bespoke-bullet-inactive {
				opacity: 0;
				transform: translate3d(60px,0,0);

			}
			&.bespoke-bullet-active {
				opacity: 1;
				transform: none;
			}
		}

		.controls {
			display: none;
		}

		.bespoke-progress {
			display: none;
			position: absolute;
			height: 100%;
			width: 100%;
			bottom: 0;
			left: 0;
			z-index: 0;
		
			span {
				transition: width 1.6s cubic-bezier(0.260, 0.860, 0.440, 0.985);
				display: block;
				height: 100%;
				width: 0px;
				opacity: 0.6;
				background: #0066FF;
			}
		}

		&.pre-progress .bespoke-progress span {
			width: 0 !important;
		}

		section {
			backface-visibility: hidden;
			transition: all .8s cubic-bezier(0.260, 0.860, 0.440, 0.985);
			z-index: 1;

			&.bespoke-before {
				transform: translate3d(-2000px,0,0);
			}
			&.bespoke-before-1 {
				transform: translate3d(-1000px,0,0);
			}
			&.bespoke-after {
				transform: translate3d(2000px,0,0);
			}
			&.bespoke-after-1 {
				transform: translate3d(1000px,0,0);
			}

			&.bespoke-active {
				z-index: 8;
			}
			&.bespoke-before, &.bespoke-after {
				z-index: 1;
			}
			&.bespoke-before-1, &.bespoke-after-1 {
				z-index: 6;
			}
			&.bespoke-before-2, &.bespoke-after-2 {
				z-index: 4;
			}
			&.bespoke-before-3, &.bespoke-after-3 {
				z-index: 2;
			}

			&.font {
				font-family: helvetica;

				h2 {
					transition: all 1s ease;
					font-weight: bold;
					letter-spacing: -2px;

					&[data-bespoke-bullet].bespoke-bullet-inactive {
						opacity: 1;
						transform: none;
					}
				}

				h3 {
					color: #808080;
					font-size: 32px;
					line-height: 52px;
					font-weight: 200;
				}
			}

			h2.threedee {
				transition: all .6s cubic-bezier(0.260, 0.860, 0.440, 0.985);
			}
			&.bespoke-active h2.threedee {
				transition-delay: .8s;
				transform: scale(1.3);
				text-shadow: 4px 2px 0 #FFADD7, -4px -2px 0 #8CE8FF;
			}

			&.classes {
				h2, ul {
					position: relative;
					top: -30px;
				}
			}
		}

		&.color {
			background-color: #d0d0d0;
			transition: all .8s cubic-bezier(0.260, 0.860, 0.440, 0.985);

			.bespoke-progress {
				display: block;
			}

			section {
				background: #fff;
				transition: all .8s ease;

				h2 {
					color: #0066FF;
				}

				&.no-color {
					background: none;
				}
			}
		}

		&.simple {
			section {
				&.bespoke-slide {
					transform-origin: 50% 50% -400px;
				}

				&.bespoke-inactive {
					opacity: 0;
				}

				&.bespoke-before {
					transform: rotateY(-90deg);
				}

				&.bespoke-after {
					transform: rotateY(90deg);
				}
			}
		}

		&.cards {
			section {
				&.bespoke-slide {
					transform-origin: 0 100% 0;
				}

				&.bespoke-inactive {
					opacity: 0;
				}

				&.bespoke-before {
					transform: translateZ(40px) rotateY(-60deg) translateX(-400px) rotateZ(120deg);
				}

				&.bespoke-after {
					transform: translate3d(50px, 0, -100px);
				}
			}
		}

		&.concave {
			section {
				&.bespoke-slide {
					transform-origin: 50% 50% 400px;
				}

				&.bespoke-inactive {
					opacity: 0;
				}

				&.bespoke-before, &.bespoke-after {
					h2 {
						opacity: 0;
					}
				}

				&.bespoke-before {
					transform: rotateY(180deg);
				}

				&.bespoke-before-1 {
					transform: rotateY(90deg);
				}

				&.bespoke-after {
					transform: rotateY(-180deg);
				}

				&.bespoke-after-1 {
					transform: rotateY(-90deg);
				}
			}
		}

		&.coverflow {
			section {
				offset = 240px;
				gap = 20px;
				scale = 0.4;

				&.bespoke-before {
					transform: translateX(((offset * -1) + (gap * -3))) rotateY(45deg) scale(scale);
				}
				&.bespoke-before-3 {
					transform: translateX(((offset * -1) + (gap * -2))) rotateY(45deg) scale(scale);
					opacity: 0.1;
				}
				&.bespoke-before-2 {
					transform: translateX(((offset * -1) + (gap * -1))) rotateY(45deg) scale(scale);
					opacity: 0.25;
				}
				&.bespoke-before-1 {
					transform: translateX((offset * -1)) rotateY(45deg) scale(scale);
					opacity: 0.4;
				}
				&.bespoke-after {
					transform: translateX(((offset * 1) + (gap * 3))) rotateY(-45deg) scale(scale);
				}
				&.bespoke-after-1 {
					transform: translateX((offset * 1)) rotateY(-45deg) scale(scale);
					opacity: 0.4;
				}
				&.bespoke-after-2 {
					transform: translateX(((offset * 1) + (gap * 1))) rotateY(-45deg) scale(scale);
					opacity: 0.25;
				}
				&.bespoke-after-3 {
					transform: translateX(((offset * 1) + (gap * 2))) rotateY(-45deg) scale(scale);
					opacity: 0.1;
				}
			}
		}
	}
}